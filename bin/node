#!/bin/zsh

if [ -n "$PORT" ]; then
    docker run -it --rm --workdir "/$(basename $(pwd))" \
        --mount type=bind,src=$(pwd),dst=/$(basename $(pwd)) \
        -v ~/vscode-remote-containers/$(basename $(pwd))/.vscode-server:/root/.vscode-server \
        -p $PORT:$PORT \
        -e PORT=$PORT \
        node:14.16.0-buster /bin/bash
else
    docker run -it --rm --workdir "/$(basename $(pwd))" \
        --mount type=bind,src=$(pwd),dst=/$(basename $(pwd)) \
        -v ~/vscode-remote-containers/$(basename $(pwd))/.vscode-server:/root/.vscode-server \
        node:14.16.0-buster /bin/bash
fi
